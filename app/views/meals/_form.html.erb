<%= form_for @meal do |f| %>
  <%= f.label :meal_type %>
  <%= f.text_field :meal_type, :autofocus => 'true', :placeholder => 'lunch, snack, etc' %>

  <%= f.label :meal_date %>
  <%= f.date_field :meal_date %>

  <%= f.label :protein_guess, "Guess Protein Amount" %>
  <%= f.number_field :protein_guess, :placeholder => 'grams', :step => 0.1 %>

  <%= f.label :carb_guess, "Guess Carbohydrate Amount" %>
  <%= f.number_field :carb_guess, :placeholder => 'grams', :step => 0.1 %>

  <%= f.label :fat_guess, "Guess Fat Amount" %>
  <%= f.number_field :fat_guess, :placeholder => 'grams', :step => 0.1 %>

  <%= f.submit  %>
<% end %>