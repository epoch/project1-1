<div class="row">
  <div class="row voffset8">
    <div class="col-md-4"></div>
    <div class="col-md-6">
      <h3>Search for a food to add:</h3>  
      <%= form_tag("/meals/#{ @meal }/foods", method: "post") do %>
      <%= label_tag(:name, "Search for:") %>
      <%= text_field_tag(:name) %>
      <%= submit_tag("Search", :class => 'btn btn-success') %>
      <% end %>    
    </div>
    <div class="col-md-2"></div>
  </div>
</div>

      
    