<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :autofocus => true %>

  <%= f.label :dob, "Date of birth" %>
  <%= f.text_field :dob %>

  <%= f.label :gender %>
  <%= f.text_field :gender %>

  <%= f.label :activity_level %>
  <%= f.text_field :activity_level %>

  <%= f.label :weight %>
  <%= f.text_field :weight %>

  <%= f.label :height %>
  <%= f.text_field :height %>

  <%= f.submit  %>
<% end %>