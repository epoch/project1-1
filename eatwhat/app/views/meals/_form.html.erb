<%= form_for @meal do |f| %>
  <%= f.label :type %>
  <%= f.text_field :type, :autofocus => true %>

  <%= f.label :meal_date %>
  <%= f.text_field :meal_date %>

  <%= f.label :protein_guess, "Guess Protein Amount" %>
  <%= f.text_field :protein_guess %>

  <%= f.label :carb_guess, "Guess Carbohydrate Amount" %>
  <%= f.text_field :carb_guess %>

  <%= f.label :fat_guess, "Guess Fat Amount" %>
  <%= f.text_field :fat_guess %>

  <%= f.submit  %>
<% end %>